# Environment Configuration Template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://kaspero:kaspero@db:5432/kaspero

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================

# NewsAPI Key (FREE: Get yours at https://newsapi.org/register)
# Free tier: 100 requests/day, 1 month old articles
API_KEY=your-newsapi-key-here

# NewsAPI endpoint - technology news in English
# Docs: https://newsapi.org/docs/endpoints/everything
API_SOURCE_URL=https://newsapi.org/v2/everything?q=technology&language=en&pageSize=50&sortBy=publishedAt

# BBC News Technology RSS Feed (FREE: No API key needed!)
# Other options:
#   - CNN: http://rss.cnn.com/rss/edition.rss
#   - TechCrunch: https://techcrunch.com/feed/
#   - Hacker News: https://hnrss.org/frontpage
#   - Reddit Tech: https://www.reddit.com/r/technology/.rss
RSS_SOURCE_URL=http://feeds.bbci.co.uk/news/technology/rss.xml

# CSV files (sample data included in data/ folder)
CSV_SOURCE_PATH=/app/data/source.csv
CSV_SOURCE_2_PATH=/app/data/source2.csv

# ETL Configuration
ETL_SCHEDULE_MINUTES=5
ETL_BATCH_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_RETRY_MAX=5
RATE_LIMIT_BACKOFF_BASE=2.0

# Schema Drift
SCHEMA_DRIFT_CONFIDENCE_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
